<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Responses", form_responses_path(@form), class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-8 shadow-sm">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @form.title %></h1>
      <p class="text-gray-600">
        Submitted <%= time_ago_in_words(@response.created_at) %> ago
        <span class="text-gray-400">•</span>
        <%= @response.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    </div>

    <div class="border-t border-gray-200 pt-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Answers</h2>
      
      <div class="space-y-6">
        <% @response.answers.each do |answer| %>
          <div class="bg-gray-50 rounded-lg p-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <%= answer.field.label %>
              <span class="text-xs text-gray-500 font-normal ml-2">(<%= answer.field.field_type.titleize %>)</span>
            </label>
            <div class="text-gray-900 font-medium">
              <%= answer.value.present? ? answer.value : "(No answer provided)" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
