<div class="max-w-3xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "â† Back to Form", form_path(@form), class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-8 shadow-sm">
    <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @form.title %></h1>
    <p class="text-gray-600 mb-8">Please fill in questions below</p>

    <%= form_with(model: [@form, @response], class: "space-y-6") do |f| %>
      <% if @response.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded">
          <h2 class="font-bold mb-2"><%= pluralize(@response.errors.count, "error") %> prevented this response from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @response.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.fields_for :answers do |answer_form| %>
        <% field = answer_form.object.field %>
        <%= answer_form.hidden_field :field_id %>
        
        <div class="field-input">
          <%= answer_form.label :value, field.label, class: "block text-sm font-medium text-gray-700 mb-2" %>
          
          <% case field.field_type %>
          <% when "input" %>
            <%= answer_form.text_field :value, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Enter your answer",
                required: true %>
          
          <% when "number" %>
            <%= answer_form.number_field :value, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Enter a number",
                step: :any,
                required: true %>
          
          <% when "select" %>
            <%= answer_form.select :value,
                options_for_select(field.options_for_select),
                { prompt: "Select an option" },
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
                required: true %>
          <% end %>
        </div>
      <% end %>

      <div class="pt-4 border-t border-gray-200">
        <%= f.submit "Submit Response", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded cursor-pointer w-full md:w-auto" %>
      </div>
    <% end %>
  </div>
</div>
